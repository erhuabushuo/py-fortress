{
  "ldap": {
    "host": "localhost",
    "port": 32770,
    "timeout": 1,
    "pool_name": "fort-conns", 
    "pool_size": 5, 
    "pool_lifetime": 600, 
    "pool_keepalive": 30, 
    "debug": false,
    "use_ssl": false,
    "ldap3_log_level": "ERROR",
    "method": "simple",
    "dn": "cn=Manager,dc=example,dc=com",
    "password": "secret"                
  },
  "dit": {
    "suffix": "dc=example,dc=com",
    "users": "ou=People,dc=example,dc=com",
    "roles": "ou=Roles, ou=RBAC, dc=example,dc=com",
    "perms": "ou=Permissions, ou=RBAC, dc=example,dc=com",
    "constraints": "ou=RBAC, dc=example,dc=com"        
  },
  "schema": {
    "user": {
      "attributes": [
        "uid", "ou", "ftid", "ftRA", "ftRC", "pwdPolicySubentry", "ftCstr",
        "cn", "sn", "description", "displayName", "employeeType",
        "title", "telephoneNumber", "mobile", "mail", "pwdReset",
        "pwdAccountLockedTime", "ftSystem", "ftProps", "departmentNumber",
        "l", "physicalDeliveryOfficeName", "postalCode", "roomNumber"
      ]
    },
    "permission": {
      "attributes": [
        "ftid", "ftObjNm", "ftOpNm", "ftPermName", "ftObjId", "ftRoles", 
        "ftUsers", "ftType", "ftProps", "description"
      ]
    },    
    "raw_delimiter": "$"
  }
}